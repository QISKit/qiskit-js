{
  "scripts": {
    "install": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "publish": "npm i && lerna publish",
    "format": "prettier --write '**/*.js'",
    "precommit": "pretty-quick --staged",
    "lint": "eslint .",
    "dep-check":
      "depcheck --ignore-dirs=dist --ignores='brfs,brfs-babel,browserify-banner,mocha,nsp,husky' && lerna run dep-check",
    "dep-sec": "lerna run dep-sec",
    "test-qasm": "lerna run test --scope @qiskit/qasm",
    "test-qe": "lerna run test --scope @qiskit/qe",
    "test-sdk": "lerna run test --scope @qiskit/sdk",
    "test-sim": "lerna run test --scope @qiskit/sim",
    "test-utils": "lerna run test --scope @qiskit/utils",
    "pretest": "npm i && npm run lint && npm run dep-check",
    "test": "lerna run test",
    "bundle-qasm":
      "browserify packages/qiskit-qasm/index.js -p [ browserify-banner --file dist/banner.txt ] -s qiskitQasm > dist/qiskit-qasm.js",
    "bundle-sim":
      "browserify packages/qiskit-sim/index.js -p [ browserify-banner --file dist/banner.txt ] -s qiskitSim > dist/qiskit-sim.js",
    "bundle-qe":
      "browserify packages/qiskit-qe/index.js -p [ browserify-banner --file dist/banner.txt ] -s QiskitQe > dist/qiskit-qe.js",
    "bundle": "npm run bundle-qasm && npm run bundle-sim && npm run bundle-qe",
    "browser": "static-server -i example.html dist"
  },
  "devDependencies": {
    "brfs": "^1.4.3",
    "brfs-babel": "^1.0.0",
    "browserify": "^16.1.0",
    "browserify-banner": "^1.0.5",
    "depcheck": "^0.6.8",
    "eslint": "^4.12.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-json": "^1.2.0",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "mocha": "^5.2.0",
    "prettier": "1.12.1",
    "pretty-quick": "^1.6.0",
    "snap-shot-it": "^4.0.1",
    "static-server": "^3.0.0",
    "strip-color": "^0.1.0"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "private": true
}
